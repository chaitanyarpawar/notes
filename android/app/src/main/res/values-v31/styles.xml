<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ SplashScreen API theme -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Splash screen background color -->
        <item name="android:windowSplashScreenBackground">@color/launch_background_color</item>
        <!-- Splash icon - use the branding image -->
        <item name="android:windowSplashScreenBrandingImage">@drawable/launch_image</item>
        <!-- Remove the icon animation -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/launch_image</item>
        <!-- Keep window background for consistency -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
